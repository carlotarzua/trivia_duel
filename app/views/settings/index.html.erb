<head>
    <%= stylesheet_link_tag 'home', media: 'all' %>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">
</head>
<body>
    <div class="homepage">
        <h1>Game Settings</h1>
        <div class="player-names">
            <div class="player">
                <label for="player1-name">Player 1 Name:</label>
                <input class="name_inputs" type="text" id="player1-name" value="Player 1">
            </div>
            <div class="player">
                <label for="player2-name">Player 2 Name:</label>
                <input class="name_inputs" type="text" id="player2-name" value="Player 2">
            </div>
            <div class="player">
                <label for="points-to-win">Points Needed to Win:</label>
                <input type="number" id="points-to-win" min="1" max ="20" value="10">
            </div>
        </div>

        <div>
            <button id="start_button">Start Game</button>
        </div>
        <div>
            <button id="back_button">Back to Home</button>
        </div>
    </div>
    <%= javascript_include_tag 'settings' %>
</body>



